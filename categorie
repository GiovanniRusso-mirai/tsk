    // ==========================================
    // LOGICA DI RENDER
    // ==========================================
    
    function render(data) {
        // Pulisci contenitori
        ['kick', 'lotta', 'kumite'].forEach(id => document.getElementById(id).innerHTML = '');

        // Raggruppa per Categoria
        const grouped = {};
        data.forEach(item => {
            const key = item.d + '|' + item.cat;
            if(!grouped[key]) grouped[key] = [];
            grouped[key].push(item);
        });

        // Genera HTML
        for(let key in grouped) {
            const [disc, catName] = key.split('|');
            const items = grouped[key];
            const container = document.getElementById(disc);

            // Crea blocco categoria
            const catBlock = document.createElement('div');
            catBlock.className = 'category-block';
            
            // Header Accordion
            const header = document.createElement('div');
            header.className = 'cat-header';
            header.innerHTML = `
                <span class="cat-title">${catName}</span>
                <span class="cat-badge">${items.length} ${items[0].type === 'match' ? 'Match' : 'Atleta'}</span>
            `;
            header.onclick = function() {
                const body = this.nextElementSibling;
                body.style.display = body.style.display === 'none' ? 'block' : 'none';
            };

            const body = document.createElement('div');
            body.className = 'cat-body';
            
            const matchContainer = document.createElement('div');
            matchContainer.className = 'match-container';

            // Controlla se è un vincitore diretto o match
            if(items.length === 1 && items[0].type === 'winner') {
                const w = items[0];
                matchContainer.innerHTML = `
                    <div class="winner-card">
                        <i class="fas fa-trophy trophy-icon"></i>
                        <div class="winner-label">Campione di Categoria</div>
                        <div class="winner-label" style="font-size:0.7rem; color:#888;">Senza Avversario</div>
                        <div class="winner-name">${w.p1}</div>
                        <div class="athlete-meta">${w.p1i}</div>
                    </div>
                `;
            } else {
                items.forEach(m => {
                    const card = document.createElement('div');
                    card.className = 'match-card';
                    card.innerHTML = `
                        <div class="match-id">${m.r || 'Gara'}</div>
                        <div class="athlete-row">
                            <div>
                                <span class="athlete-name">${m.p1}</span>
                                <span class="athlete-meta">${m.p1i}</span>
                            </div>
                        </div>
                        <div class="vs-badge">VS</div>
                        <div class="athlete-row">
                            <div>
                                <span class="athlete-name">${m.p2}</span>
                                <span class="athlete-meta">${m.p2i}</span>
                            </div>
                        </div>
                        ${m.note ? `<div class="warning-badge"><i class="fas fa-exclamation-triangle"></i> ${m.note}</div>` : ''}
                    `;
                    matchContainer.appendChild(card);
                });
            }

            body.appendChild(matchContainer);
            catBlock.appendChild(header);
            catBlock.appendChild(body);
            container.appendChild(catBlock);
        }
    }

    // ==========================================
    // INTERATTIVITÀ
    // ==========================================

    function switchTab(tabId) {
        // Tabs UI
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.querySelector(`.tab-btn.${tabId}`).classList.add('active');

        // Content
        document.querySelectorAll('.discipline-section').forEach(s => s.classList.remove('active'));
        document.getElementById(tabId).classList.add('active');
    }

    function filterContent() {
        const query = document.getElementById('searchInput').value.toLowerCase();
        
        // Se la ricerca è vuota, resetta display
        if(!query) {
            document.querySelectorAll('.category-block').forEach(b => b.style.display = 'block');
            return;
        }

        document.querySelectorAll('.category-block').forEach(block => {
            const text = block.innerText.toLowerCase();
            if(text.includes(query)) {
                block.style.display = 'block';
                // Apri accordion se trovato
                block.querySelector('.cat-body').style.display = 'block';
            } else {
                block.style.display = 'none';
            }
        });
    }

    // Avvio Iniziale
    render(tournamentData);

</script>

</body>
</html>
